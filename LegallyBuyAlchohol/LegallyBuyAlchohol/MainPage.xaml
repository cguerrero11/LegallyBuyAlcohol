<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LegallyBuyAlchohol.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="When can I buy alcohol?" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Find out here!" FontSize="Title" Padding="30,10,30,10"/>
        <Label FontSize="16" Padding="30,24,30,0"/>
        <Label Text="Select your birthday:" Padding="20,0,0,20"/>

        <DatePicker x:Name="BirthDate"
                    Format="D"
                    Margin="30, 0, 0, 30"
                    DateSelected="Get_years" 
                    MaximumDate="12/31/2015"/>

        <!--<Label Text="{Binding Source={}, StringFormat='{0:MM d, yyyy}'}" Padding="20,0,0,20" x:Name="year"/>-->
        <Label Text="You can buy alcohol in..." Padding="20,0,0,20" x:Name="year"/> 

    </StackLayout>

</ContentPage>
